<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@android:color/white"
    tools:context=".ui.DashboardActivity">

    <!-- App Icon -->
    <ImageView
        android:id="@+id/appIcon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/careermatelogo"
        android:contentDescription="App Icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        app:tint="@android:color/black" />

    <!-- Title -->
    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CareerMate"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/appIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="40dp"/>

    <!-- Upload Resume Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnUploadResume"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="368dp"
        android:layout_height="111dp"
        android:text="Upload Resume"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:cornerRadius="16dp"
        app:icon="@android:drawable/ic_menu_upload_you_tube"
        app:iconGravity="start"
        app:iconPadding="16dp"
        app:iconSize="40dp"
        app:iconTint="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appTitle" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnJobDescriptionMatch"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="363dp"
        android:layout_height="117dp"
        android:layout_marginTop="36dp"
        android:text="Job Description Match"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:cornerRadius="16dp"
        app:icon="@android:drawable/ic_search_category_default"
        app:iconGravity="start"
        app:iconPadding="16dp"
        app:iconSize="40dp"
        app:iconTint="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnUploadResume" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnProgressTracker"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="359dp"
        android:layout_height="109dp"
        android:layout_marginTop="48dp"
        android:text="Progress Tracker"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:cornerRadius="16dp"
        app:icon="@android:drawable/checkbox_off_background"
        app:iconGravity="start"
        app:iconPadding="16dp"
        app:iconSize="40dp"
        app:iconTint="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnJobDescriptionMatch" />

</androidx.constraintlayout.widget.ConstraintLayout>