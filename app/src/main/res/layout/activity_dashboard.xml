<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DashboardActivity"
    tools:openDrawer="start">

    <!-- Main content -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorSurface"
        android:padding="24dp">

        <!-- Logo inside MaterialCard -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/appIconCard"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="32dp"
            app:cardCornerRadius="50dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@android:color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/appIcon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ui_logo"
                android:contentDescription="@string/app_name"
                android:scaleType="centerInside"
                android:padding="16dp"
                android:alpha="0"
                android:translationY="-30dp"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- Settings Button -->
        <ImageButton
            android:id="@+id/settingsButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Settings"
            android:src="@drawable/ic_settings"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="?attr/colorOnSurface" />

        <!-- Welcome Title -->
        <TextView
            android:id="@+id/welcomeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Welcome to CareerMate"
            android:textColor="?attr/colorOnSurface"
            android:textSize="24sp"
            android:textStyle="bold"
            android:alpha="0"
            android:translationY="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/appIconCard" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/welcomeUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="16sp"
            android:alpha="0"
            android:translationY="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/welcomeTitle"
            tools:text="Hello, User!" />

        <!-- Buttons -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnUploadResume"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingVertical="20dp"
            android:text="Upload Resume"
            android:textSize="16sp"
            android:alpha="0"
            android:translationY="40dp"
            app:cornerRadius="16dp"
            app:icon="@drawable/ic_upload"
            app:iconGravity="start"
            app:iconPadding="16dp"
            app:iconSize="32dp"
            app:layout_constraintBottom_toTopOf="@+id/btnJobDescriptionMatch"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/welcomeUser"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintVertical_bias="0.8" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnJobDescriptionMatch"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingVertical="20dp"
            android:text="Job Description Match"
            android:textSize="16sp"
            android:alpha="0"
            android:translationY="40dp"
            app:cornerRadius="16dp"
            app:icon="@drawable/ic_search"
            app:iconGravity="start"
            app:iconPadding="16dp"
            app:iconSize="32dp"
            app:layout_constraintBottom_toTopOf="@+id/btnProgressTracker"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnUploadResume" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnProgressTracker"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingVertical="20dp"
            android:text="Progress Tracker"
            android:textSize="16sp"
            android:alpha="0"
            android:translationY="40dp"
            app:cornerRadius="16dp"
            app:icon="@drawable/ic_progress"
            app:iconGravity="start"
            app:iconPadding="16dp"
            app:iconSize="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnJobDescriptionMatch" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/drawer_header"
        app:menu="@menu/drawer_menu" />

</androidx.drawerlayout.widget.DrawerLayout>