<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Allow the app to access the internet -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CareerMateApp"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".ui.MockInterviewActivity"
            android:exported="false" />
        <activity
            android:name=".ui.ProgressTrackerActivity"
            android:exported="false" />
        <activity
            android:name=".ui.JobDescriptionActivity"
            android:exported="false" />
        <activity
            android:name=".ui.UploadResumeActivity"
            android:exported="false" />
        <activity
            android:name=".ui.DashboardActivity"
            android:exported="false" /> <!-- SplashActivity as launcher with custom splash theme -->
        <activity
            android:name=".ui.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.CareerMate.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Other activities using the app theme (Material3) -->
        <activity
            android:name=".ui.LogInActivity"
            android:exported="false"
            android:theme="@style/Theme.CareerMateApp" />
        <activity
            android:name=".ui.RegisterActivity"
            android:exported="false"
            android:theme="@style/Theme.CareerMateApp" />
        <activity
            android:name=".ui.MainActivity"
            android:exported="false"
            android:theme="@style/Theme.CareerMateApp" />
    </application>

</manifest>